<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@style/_AppTheme"/>

    <style name="_AppTheme" parent="Theme.AppCompat">
        <item name="android:editTextStyle">@style/TextAppTheme.EditTextAppTheme</item>
        <item name="android:textViewStyle">@style/TextAppTheme.TextViewAppTheme</item>
        <item name="android:checkboxStyle">@style/TextAppTheme.CheckBoxAppTheme</item>
        <item name="android:seekBarStyle">@style/Widget.Muzei.SeekBar</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <style name="TextAppTheme.TextViewAppTheme" parent="android:Widget.TextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppTheme.EditTextAppTheme" parent="android:Widget.EditText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="TextAppTheme.CheckBoxAppTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#dd000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="Widget.Muzei.SeekBar" parent="android:Widget.Holo.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal</item>
        <item name="android:thumb">@drawable/scrubber_control_selector</item>
    </style>

</resources>